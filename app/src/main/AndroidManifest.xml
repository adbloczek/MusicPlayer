<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.michal.galecki.player.music.musicplayer">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.michal.galecki.player.music.musicplayer.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.michal.galecki.player.music.musicplayer.activity.MusicActivity"
            android:screenOrientation="portrait"
            android:parentActivityName="com.michal.galecki.player.music.musicplayer.activity.MainActivity">
        </activity>
        <activity
            android:name="com.michal.galecki.player.music.musicplayer.activity.AboutAuthorActivity"
            android:label="@string/about"
            android:parentActivityName="com.michal.galecki.player.music.musicplayer.activity.MainActivity">
        </activity>
    </application>

</manifest>